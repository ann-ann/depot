<% if order_item == @current_item %>
<tr id="current_item">
<% else %>
<tr>
<% end %>
  <td><%= order_item.quantity %>x </td>
  <td><%= order_item.product.title %></td>
  <td class="item_price"><%= number_to_currency(order_item.price) %></td>
  <td><%= link_to ' X', order_item, method: :delete %></td>
</tr>