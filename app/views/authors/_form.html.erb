<%= form_for(@author) do |f| %>
<%= render "shared/error_messages", :target => f.object %>
  <div class="field">
    <%= f.label :first_name %><br>
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :last_name %><br>
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label :photo %><br>
    <%= f.text_field :photo %>
  </div>
  <div class="field">
    <%= f.label :biography %><br>
    <%= f.text_field :biography %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
